{
  "name": "minimal-express-app",
  "version": "1.0.0",
  "description": "Minimal Express app with scalable structure",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "verify:ai": "node scripts/verify-ai.js",
    "db:verify": "node scripts/verify-db-connection.js",
    "db:migrate": "node ./node_modules/typeorm/cli.js -d ./src/typeorm-datasource.js migration:run",
    "db:migrate:revert": "node ./node_modules/typeorm/cli.js -d ./src/typeorm-datasource.js migration:revert",
    "db:migrate:show": "node ./node_modules/typeorm/cli.js -d ./src/typeorm-datasource.js migration:show",
    "db:seed": "node ./src/seeds/seed.js",
    "db:init": "node ./src/scripts/db-init.js",
    "create:admin": "node ./scripts/create-admin-account.js",
    "final:wrapup": "node ./scripts/final-wrapup.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "cors": "2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.16.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "youtube-search-api": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules",
      "package.json",
      "package-lock.json",
      "*.lock",
      "*.log",
      "*.md",
      ".git",
      "dist",
      "build"
    ],
    "ext": "js,json"
  },
  "comments": {
    "migrationsAndSeeding": "Usage: npm run db:migrate (apply), npm run db:migrate:revert (undo last), npm run db:migrate:show (list), npm run db:seed (seed admin/instructor/learner + sample courses/lessons). Ensure env vars DB_HOST, DB_PORT, DB_USERNAME, DB_PASSWORD, DEFAULT_DB are set. Avoid TYPEORM_SYNC in production; use migrations instead."
  }
}
